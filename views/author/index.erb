<table class="browse-table table-author" aria-labelledby="maincontent">
  <thead>
    <tr>
      <th>Author</th>
      <th>Records</th>
    </tr>
  </thead>
  <tbody>
    <% list.items.each do |result| %>
      <% if result.match_notice? %>
        <tr class="match-<%= list.num_matches == 0 ? 'none' : 'notice' %>">
          <td colspan="2">
            <%= list.match_text %>
          </td>
        </tr>
      <% else %>
        <tr <% if result.exact_match? %>class="exact-match"<% end %>>
          <td>
            <dl>
              <dt class="visually-hidden">Author:</dt>
              <dd>
                <% if result.num_matches > 0 %><a href="<%= result.url%>"><% end %>
                  <span <% if result.exact_match? %>class="strong"<% end %>>
                    <%=result.author%>
                  </span>
                <% if result.num_matches > 0 %>(catalog results) </a><% end %>
                <% if result.heading_link? %>
                  <a href="<%= result.heading_link%>" class="vernacular pipe">About this author</a>
                <% end %>
              </dd>
              <% if result.has_cross_references? %>
                <% result.cross_references.each do | cr | %>
                  <% if cr.kind == 'see' %>
                    <dt>See:</dt>
                  <% end %>
                  <dd>
                    <% if cr.num_matches > 0 %><a href="<%= cr.url%>"><% end %>
                      <%=cr.author%>
                    <% if cr.num_matches > 0 %>
                      (in author list)</a> (<%= cr.record_text %>)
                    <% end %>
                    <% if cr.heading_link? %>
                      <a href="<%= cr.heading_link %>" class="vernacular pipe">About this author</a>
                    <% end %>
                  </dd>
                <% end %>
              <% end %>
            </dl>
          </td>
          <td>
            <%= result.record_text %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
