source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

gem 'sinatra'
gem 'simple_solr_client'
gem 'thin'
gem 'slim'
gem 'httparty'

group :development do
  gem 'sinatra-contrib'
  gem 'listen'
end
group :development, :test do
  gem 'pry'
  gem 'pry-byebug'
  gem 'rack-test'
  gem 'rspec'
  gem 'webmock'
  gem 'simplecov'
  gem 'climate_control'
end
